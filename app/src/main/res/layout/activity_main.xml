<LinearLayout
xmlns:tools="http://schemas.android.com/tools"
xmlns:android="http://schemas.android.com/apk/res/android"
android:id="@+id/activity_main"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context="com.example.jonny.updateweights.MainActivity">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <Button
        android:text="Initialize OpenCL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/initCl"
        android:layout_weight="1"
        android:layout_marginTop="51dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Initialize W"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/initW"
        android:layout_weight="1"
        android:layout_below="@+id/initCl"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <Button
        android:text="Run"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/run"
        android:layout_weight="1"
        android:layout_below="@+id/initW"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Waiting for initialization..."
        android:id="@+id/result"
        android:layout_below="@+id/initW"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="107dp" />

</RelativeLayout>

</LinearLayout>
