<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.jonny.updateweights.MainActivity">

        <TextView
            android:id="@+id/result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waiting for initialization..."
            app:layout_constraintLeft_toLeftOf="@+id/activity_main"
            app:layout_constraintTop_toBottomOf="@+id/run"
            android:layout_marginTop="8dp"
            app:layout_constraintRight_toRightOf="@+id/activity_main"
            app:layout_constraintBottom_toBottomOf="@+id/activity_main"
            app:layout_constraintHorizontal_bias="0.1"
            app:layout_constraintVertical_bias="0.07" />

        <Button
            android:id="@+id/initCl"
            android:text="Initialize OpenCL"
            android:layout_width="116dp"
            android:layout_height="57dp"
            app:layout_constraintLeft_toLeftOf="@+id/activity_main"
            app:layout_constraintTop_toTopOf="@+id/activity_main"
            android:layout_marginTop="56dp"
            app:layout_constraintRight_toRightOf="@+id/activity_main" />

        <Button
            android:id="@+id/run"
            android:text="Run"
            android:layout_width="90dp"
            android:layout_height="50dp"
            app:layout_constraintLeft_toLeftOf="@+id/initCl"
            app:layout_constraintTop_toBottomOf="@+id/initCl"
            android:layout_marginTop="112dp"
            app:layout_constraintRight_toRightOf="@+id/initCl"
            app:layout_constraintHorizontal_bias="0.52" />

        <Button
            android:text="Initialize vector W"
            android:layout_width="116dp"
            android:layout_height="57dp"
            android:id="@+id/initW"
            app:layout_constraintLeft_toLeftOf="@+id/initCl"
            app:layout_constraintTop_toBottomOf="@+id/initCl"
            android:layout_marginTop="32dp"
            app:layout_constraintRight_toRightOf="@+id/initCl"
            app:layout_constraintBottom_toTopOf="@+id/run"
            android:layout_marginBottom="40dp"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintVertical_bias="0.39" />z

    </android.support.constraint.ConstraintLayout>
</ScrollView>